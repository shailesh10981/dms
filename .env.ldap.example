# LDAP Configuration
# Copy these settings to your .env file and update with your LDAP server details

# LDAP Connection Settings
LDAP_CONNECTION=default
LDAP_HOST=ldap.example.com
LDAP_PORT=636
LDAP_BASE_DN=dc=example,dc=com
LDAP_USERNAME=cn=service_account,ou=users,dc=example,dc=com
LDAP_PASSWORD=your_service_account_password
LDAP_TIMEOUT=5
LDAP_SSL=true
LDAP_TLS=false
LDAP_SASL=false

# LDAP Logging
LDAP_LOGGING=true

# LDAP Cache
LDAP_CACHE=false

# LDAP User Attributes
LDAP_USER_ATTRIBUTE=samaccountname
LDAP_EMAIL_ATTRIBUTE=mail
LDAP_NAME_ATTRIBUTE=displayname
LDAP_DEPARTMENT_ATTRIBUTE=department
LDAP_TITLE_ATTRIBUTE=title

# Example LDAP Group DNs (update these in config/ldap.php)
# Admin Groups: CN=DMS_Admins,OU=Groups,DC=example,DC=com
# Manager Groups: CN=DMS_Managers,OU=Groups,DC=example,DC=com
# Compliance Groups: CN=DMS_Compliance,OU=Groups,DC=example,DC=com
# Auditor Groups: CN=DMS_Auditors,OU=Groups,DC=example,DC=com

